                   FontSize="18" 
                   FontAttributes="Bold" 
                   TextColor="#2C3E50"
                   Margin="0,10,0,0"/>

            <!-- Nombre Completo -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Nombre Completo" TextColor="#2C3E50" FontSize="14" FontAttributes="Bold"/>
                <Frame Style="{StaticResource EntryFrameStyle}">
                    <Entry Text="{Binding Nombre}"
                           Placeholder="Ingresa tu nombre completo"
                           PlaceholderColor="#95A5A6"
                           TextColor="#2C3E50"
                           BackgroundColor="Transparent"
                           Margin="15,0"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Email Universitario -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Email Universitario" TextColor="#2C3E50" FontSize="14" FontAttributes="Bold"/>
                <Frame Style="{StaticResource EntryFrameStyle}">
                    <Entry Text="{Binding Email}"
                           Placeholder="nombre@universidad.edu.ec"
                           PlaceholderColor="#95A5A6"
                           TextColor="#2C3E50"
                           BackgroundColor="Transparent"
                           Keyboard="Email"
                           Margin="15,0"/>
                </Frame>
            </VerticalStackLayout>

            <!-- NÃºmero de TelÃ©fono -->
            <VerticalStackLayout Spacing="5">
                <Label Text="NÃºmero de TelÃ©fono" TextColor="#2C3E50" FontSize="14" FontAttributes="Bold"/>
                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Frame BackgroundColor="#F8F9FA" CornerRadius="10" Padding="0" HasShadow="False" BorderColor="#E0E0E0" WidthRequest="80">
                        <Label Text="+593" 
                               TextColor="#2C3E50" 
                               VerticalOptions="Center" 
                               HorizontalOptions="Center"
                               FontSize="16"/>
                    </Frame>
                    <Frame Style="{StaticResource EntryFrameStyle}" HorizontalOptions="FillAndExpand">
                        <Entry Text="{Binding Telefono}"
                               Placeholder="99 123 4567"
                               PlaceholderColor="#95A5A6"
                               TextColor="#2C3E50"
                               BackgroundColor="Transparent"
                               Keyboard="Telephone"
                               Margin="15,0"/>
                    </Frame>
                </StackLayout>
            </VerticalStackLayout>

            <!-- ID Banner -->
            <VerticalStackLayout Spacing="5">
                <Label Text="ID Banner" TextColor="#2C3E50" FontSize="14" FontAttributes="Bold"/>
                <Frame Style="{StaticResource EntryFrameStyle}">
                    <Entry Text="{Binding IdBanner}"
                           Placeholder="Ej: B00123456"
                           PlaceholderColor="#95A5A6"
                           TextColor="#2C3E50"
                           BackgroundColor="Transparent"
                           Margin="15,0"/>
                </Frame>
            </VerticalStackLayout>

            <!-- SecciÃ³n Cambio de ContraseÃ±a -->
            <Label Text="Cambiar ContraseÃ±a (Opcional)" 
                   FontSize="16" 
                   FontAttributes="Bold" 
                   TextColor="#2C3E50"
                   Margin="0,20,0,0"/>

            <!-- Nueva ContraseÃ±a -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Nueva ContraseÃ±a" TextColor="#2C3E50" FontSize="14"/>
                <Frame Style="{StaticResource EntryFrameStyle}">
                    <Entry Text="{Binding Password}"
                           Placeholder="Dejar vacÃ­o para mantener actual"
                           PlaceholderColor="#95A5A6"
                           TextColor="#2C3E50"
                           BackgroundColor="Transparent"
                           IsPassword="True"
                           Margin="15,0"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Confirmar Nueva ContraseÃ±a -->
            <VerticalStackLayout Spacing="5" IsVisible="{Binding Password, Converter={StaticResource IsNotNullOrEmptyConverter}}">
                <Label Text="Confirmar Nueva ContraseÃ±a" TextColor="#2C3E50" FontSize="14"/>
                <Frame Style="{StaticResource EntryFrameStyle}">
                    <Entry Text="{Binding ConfirmPassword}"
                           Placeholder="Repite la nueva contraseÃ±a"
                           PlaceholderColor="#95A5A6"
                           TextColor="#2C3E50"
                           BackgroundColor="Transparent"
                           IsPassword="True"
                           Margin="15,0"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Tipo de Usuario -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Tipo de Usuario" TextColor="#2C3E50" FontSize="14" FontAttributes="Bold"/>
                <Frame BackgroundColor="#F0F8FF" CornerRadius="10" Padding="15">
                    <StackLayout Orientation="Horizontal" Spacing="30">
                        <RadioButton Content="ðŸš¶ Pasajero" 
                                    GroupName="UserType" 
                                    IsChecked="{Binding IsDriver, Converter={StaticResource InvertedBoolConverter}}" 
                                    TextColor="#2C3E50"/>
                        <RadioButton Content="ðŸš— Conductor" 
                                    GroupName="UserType" 
                                    IsChecked="{Binding IsDriver}" 
                                    TextColor="#2C3E50"/>
                    </StackLayout>
                </Frame>
            </VerticalStackLayout>

            <!-- Botones de AcciÃ³n -->
            <VerticalStackLayout Spacing="15" Margin="0,30,0,0">

                <!-- BotÃ³n Actualizar -->
                <Button Text="ðŸ’¾ Actualizar Perfil"
                        Command="{Binding UpdateCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                        BackgroundColor="#27AE60"
                        TextColor="White"
                        CornerRadius="25"
                        HeightRequest="50"
                        FontSize="16"
                        FontAttributes="Bold"/>

                <!-- Botones Secundarios -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                    <Button Grid.Column="0"
                            Text="ðŸšª Cerrar SesiÃ³n"
                            Command="{Binding LogoutCommand}"
                            BackgroundColor="#F39C12"
                            TextColor="White"
                            CornerRadius="20"
                            HeightRequest="45"
                            FontSize="14"/>

                    <Button Grid.Column="1"
                            Text="ðŸ“Š EstadÃ­sticas"
                            BackgroundColor="#3498DB"
                            TextColor="White"
                            CornerRadius="20"
                            HeightRequest="45"
                            FontSize="14"/>
                </Grid>

                <!-- Zona de Peligro -->
                <Frame BackgroundColor="#FFEBEE" CornerRadius="10" Padding="15" Margin="0,20,0,0">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="âš ï¸ Zona de Peligro" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="#E74C3C"/>
                        <Label Text="Esta acciÃ³n no se puede deshacer" 
                               FontSize="12" 
                               TextColor="#7F8C8D"/>
                        <Button Text="ðŸ—‘ï¸ Eliminar Cuenta"
                                Command="{Binding DeleteCommand}"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                                BackgroundColor="#E74C3C"
                                TextColor="White"
                                CornerRadius="20"
                                HeightRequest="40"
                                FontSize="14"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>

            <!-- Indicador de carga -->
            <ActivityIndicator IsVisible="{Binding IsBusy}" 
                             IsRunning="{Binding IsBusy}"
                             Color="#8B0000"
                             VerticalOptions="Center"
                             Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>